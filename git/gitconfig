[user]
name = Mohit Singh
email = mohit@mohitsingh.in

[core]
excludesfile = ~/.gitignore
pager = delta
editor = nvim

[alias]
a = add
ap = add --patch
s = status
ss = status -s
l = log
lg = log --graph --all
sl = shortlog --summary --all --email
d = diff
ds = diff --staged
c = commit
cm = commit --message
cp = commit --patch
ca = commit --amend --all
cu = commit --amend --all --no-edit
u = pull
p = push
pf = push --force
co = checkout
m = merge
ms = merge --squash
mc = merge --continue
ma = merge --abort
r = rebase
rs = rebase --skip
rc = rebase --continue
ra = rebase --abort
# delete a commit using rebase --onto
rd = "!f() { git rebase -r --onto \"$1~\" \"$1\"; }; f" # delete commit
# delete a tag from local and remote
td = "!f() { git tag --delete \"$1\"; git push origin :\"$1\"; }; f"

[push]
default = current
followTags = true

[pull]
ff = only

[fetch]
prune = true

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[delta]
features = line-numbers
syntax-theme=OneHalfDark
commit-decoration-style = yellow box ul
file-style = yellow ul
file-decoration-style = none
line-numbers-minus-style = red
line-numbers-plus-style = green
line-numbers-zero-style = brightblack

[format]
pretty = "%C(yellow)%h%Creset %C(auto)%d%Creset %s %C(green)%ar%Creset %C(cyan)%aN%Creset"

[log]
abbrevCommit = true
