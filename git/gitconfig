[user]
  name = Mohit Singh
  email = mohit@mohitsingh.in

[core]
  excludesfile = ~/.gitignore

[alias]
  a = add
  ap = add --patch
  s = status
  ss = status -s
  l = log --oneline
  d = diff
  ds = diff --staged
  r = restore
  rs = restore --staged
  c = commit -m
  cp = commit --patch
  ca = commit --amend --all
  cu = commit --amend --all --no-edit
  u = pull
  p = push
  pf = push --force
  co = checkout

[push]
  default = current
  followTags = true

[pull]
  ff = only

[fetch]
  prune = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
    pager = diff-so-fancy | less --tabs=2 -RFX

[init]
	defaultBranch = main
